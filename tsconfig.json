{
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "",
    "strict": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "src/doc"
  ],
  "include": [
    "src"
  ]
}
