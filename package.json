{
  "name": "@josselinbuils/components",
  "version": "0.1.2",
  "description": "Component library based on ManoMano's toolkit.",
  "author": "Josselin BUILS",
  "private": false,
  "license": "MIT",
  "scripts": {
    "add:staged": "exec-staged 'git add' '\\.(js|tsx?|scss)$'",
    "build": "yarn build:lib && yarn build:doc",
    "build:doc": "rimraf .docz && docz build --base /components && cpx \".docz/dist/**/*\" doc && rimraf .docz",
    "build:lib": "rimraf dist && rollup -c && yarn copy:package-files",
    "copy:package-files": "cpx ./LICENSE dist && cpx ./package.json dist && cpx ./README.md dist ",
    "csscomb:staged": "exec-staged 'csscomb -v' '\\.scss$'",
    "dev": "rimraf .docz && docz dev",
    "lint": "tslint -p tsconfig.json",
    "lint:staged": "exec-staged 'yarn lint' '^src.*\\.tsx?$'",
    "prettier:staged": "exec-staged 'prettier --write' '\\.(js|tsx?|scss)$'",
    "start:doc": "node server.js",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:staged && yarn prettier:staged && yarn csscomb:staged && yarn add:staged"
    }
  },
  "peerDependencies": {
    "react": "^16",
    "react-dom": "^16"
  },
  "devDependencies": {
    "@josselinbuils/exec-staged": "^0.1.1",
    "@josselinbuils/tslint": "^5.1.0",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@types/classnames": "^2.2.10",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^25.1.5",
    "autoprefixer": "^9.7.5",
    "classnames": "^2.2.6",
    "cpx": "^1.5.0",
    "csscomb": "^4.3.0",
    "docz": "^2.3.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.4",
    "express": "^4.17.1",
    "gatsby-plugin-sass": "^2.2.1",
    "husky": "^4.2.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^25.2.7",
    "node-sass": "^4.13.1",
    "prettier": "^2.0.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.3.2",
    "rollup-plugin-multi-input": "^1.1.1",
    "rollup-plugin-postcss": "^2.5.0",
    "rollup-plugin-typescript2": "^0.27.0",
    "serve-static": "^1.14.1",
    "ts-jest": "^25.3.1",
    "tslint": "^6.1.1",
    "tslint-react-a11y": "^1.1.0",
    "typescript": "~3.4.5"
  },
  "browserslist": [
    "defaults"
  ],
  "prettier": {
    "singleQuote": true
  }
}
